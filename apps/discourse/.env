POWER_PASSWORD=1PrMxExC45LsCT

W9_NAME=discourse
W9_REPO=docker.io/bitnami/discourse
W9_VERSION=3

W9_HTTP_PORT=9001
W9_USER=admin
W9_PASSWORD=$POWER_PASSWORD

# This URL must use domain, discourse don't allowed IP access
W9_URL=appname.example.com
W9_URL_REPLACE=true

W9_NETWORK=websoft9

W9_DB_POSTGRES_VERSION=15
W9_DB_POSTGRES_PORT=5432
W9_DB_POSTGRES_PASSWORD=$POWER_PASSWORD
W9_DB_POSTGRES_NAME=$W9_NAME
W9_DB_POSTGRES_USER=$W9_NAME


# environments of Discourse
DISCOURSE_HOST=$W9_URL
DISCOURSE_USERNAME=$W9_USER
DISCOURSE_PASSWORD=$POWER_PASSWORD
DISCOURSE_PRECOMPILE_ASSETS=no

# You can set SMTP after installation
DISCOURSE_SMTP_HOST=smtp.gmail.com
DISCOURSE_SMTP_PORT=587
DISCOURSE_SMTP_USER=your_email@gmail.com
DISCOURSE_SMTP_PASSWORD=your_password
DISCOURSE_SMTP_PROTOCOL=tls

#ALLOW_EMPTY_PASSWORD=yes
DISCOURSE_DATABASE_HOST=$W9_NAME-db
DISCOURSE_DATABASE_PORT_NUMBER=5432
DISCOURSE_DATABASE_USER=$W9_NAME
DISCOURSE_DATABASE_NAME=$W9_NAME
DISCOURSE_DATABASE_PASSWORD=$POWER_PASSWORD

DISCOURSE_REDIS_HOST=$W9_NAME-redis
DISCOURSE_REDIS_PORT_NUMBER=6379

POSTGRESQL_CLIENT_POSTGRES_USER=$W9_NAME
POSTGRESQL_CLIENT_CREATE_DATABASE_NAME=$W9_NAME
POSTGRESQL_CLIENT_POSTGRES_PASSWORD=$POWER_PASSWORD
POSTGRESQL_CLIENT_CREATE_DATABASE_EXTENSIONS=hstore,pg_trgm